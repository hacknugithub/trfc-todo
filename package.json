{
  "name": "terrific-todo",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "workspaces": {
    "packages": ["packages/*"],
    "nohoist": [
      "**/@prisma",
      "**/@prisma/**",
      "**/@prisma/client",
      "**/@prisma/client/**",
      "**/prisma",
      "**/prisma/**"
    ]
  },
  "scripts": {
    "build:client": "yarn workspace @terrific-todo/client build",
    "start:client": "yarn workspace @terrific-todo/client start",
    "build:server": "yarn workspace @terrific-todo/server build",
    "start:server": "yarn workspace @terrific-todo/server start",
    "dev": "lerna run dev --parallel",
    "build": "lerna run build",
    "db:deploy": "yarn workspace @terrific-todo/server prisma:deploy"
  },
  "dependencies": {},
  "devDependencies": {
    "lerna": "^9.0.3"
  },
  "private": "true"
}

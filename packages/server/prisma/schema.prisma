generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// User model
model User {
  id        String @id @default(uuid())
  email     String @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  //(Relation 1 2 many)
  todos Todo[]
}

// Todo model
model Todo {
  id          String   @id @default(uuid())
  title       String
  description String?
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  //(Foreign Key)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}
